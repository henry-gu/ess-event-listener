<html>
  <%- include('partials/head') %>
  <body>
    <%- include('partials/nav') %>
    <div class="container mt-2 bg-secondary bg-gradient">
      <h5 class="px-4 py-2 bg-secondary bg-gradient text-white fs-5">Event List</h5>
      <div class="container mt-3">
        <form action="/events" method="get">
          <div class="form-group">
            <label for="eventTopicSelect">Filter by Event Topic:</label>
            <select class="form-control" id="eventTopicSelect" name="eventTopic">
              <option value="">All Topics</option>
              <option value="public.concur.request">public.concur.request</option>
              <option value="public.concur.expense.report">public.concur.expense.report</option>
              <option value="public.concur.travel.itinerary">public.concur.travel.itinerary</option>
              <option value="public.concur.user.profile.identity">public.concur.user.profile.identity</option>
              <option value="public.concur.user.provisioning">public.concur.user.provisioning</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Filter</button>
        </form>
      </div>
    </div>
    <div class="container">
      <% events.forEach(function(event){ %>
      <div class="row pt-1 bg-secondary bg-gradient bg-opacity-25">
        <div class="col-11 fs-6 fw-bold align-middle">
          <button type="button" class="btn btn-secondary btn-sm"><%= event.timeStamp %></button>
          <button type="button" class="btn btn-primary btn-sm"><%= event.topic %></button>
          <button type="button" class="btn btn-success btn-sm"><%= event.type %></button>
          <button type="button" class="btn btn-warning btn-sm"><%= event.id %></button>
        </div>
        <div class="col-1">
          <form class="mb-1" action="/eventdelete/<%= event.id%>" method="post">
            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
      <div class="row pt-1 pb-1 border bg-light border-light">
        <div class="col-12 align-left">
          <span class="btn btn-light btn-sm"><%= event.facts.slice(0,180) + " ..." %></span>
          <a href="/event/<%= event.id%>"><button type="button" class="btn btn-outline-primary btn-sm align-right">More</button></a>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
